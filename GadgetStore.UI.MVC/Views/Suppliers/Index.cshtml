@model IEnumerable<GadgetStore.DATA.EF.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}
@*Customize
    1. Index
    2. Create/Edit
    3. Details/Delete
*@
<h1>@ViewBag.Title</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Supplier</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.SupplierId">
                        @Html.DisplayFor(modelItem => item.SupplierName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> |
                    @* <a asp-action="Details" asp-route-id="@item.SupplierId">Details</a> | *@
                    <a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
@*                     <i class="fa fa-pencil"></i>
                    <i class="fa fa-trash"></i> *@
                </td>
            </tr>
        }
    </tbody>
</table>
