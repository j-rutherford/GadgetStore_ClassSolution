@model GadgetStore.DATA.EF.Models.Order

@{
    ViewData["Title"] = "Order ID: " + Model.OrderId;
}

<h1>@ViewBag.Title</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipToName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipToName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShipZip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShipZip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <span>
            <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
        </span>
    }
    <a asp-action="Index">Back to Orders</a>
</div>
